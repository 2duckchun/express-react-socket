{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "jsx": "react-jsx", // JSX 지원을 설정
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"] // @를 src로 매핑
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/server/**/*.ts"],
  "exclude": ["node_modules"]
}
